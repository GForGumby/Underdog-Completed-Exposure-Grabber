{
  "manifest_version": 3,
  "name": "Exposures",
  "version": "1.0.0",
  "description": "Grabs exposures from Completed page and exports a CSV.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://www.underdogfantasy.com/*",
    "https://underdogfantasy.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Exposures"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.underdogfantasy.com/*",
        "https://underdogfantasy.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
